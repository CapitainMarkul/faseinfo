<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="sbis.data.model.presentation.PersonSearch" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/colorPrimary">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_photo"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:adjustViewBounds="true"
            app:actualImageScaleType="centerCrop"
            app:failureImage="@drawable/ic_cloud_off_black_36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@drawable/ic_person_black_36dp"
            app:roundedCornerRadius="30dp"
            tools:placeholderImage="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:text='@{viewModel.secondName + " " + viewModel.name}'
            app:layout_constraintBottom_toTopOf="@+id/txt_user_post"
            app:layout_constraintStart_toEndOf="@+id/user_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/full_names"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/txt_user_post"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorGray1"
            android:textSize="14sp"
            android:text='@{viewModel.postName}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/user_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_user_name"
            tools:text="@tools:sample/cities" />

    </android.support.constraint.ConstraintLayout>

</layout>
